//consulta de datos a nivel nacional:
 db.historico.aggregate(    { $group: { _id:  "$Fecha" } }    )
 
 //-----------------------------------------------------------------------
 
  db.historico.aggregate(
   [
     {
       $group:
         {
           _id: { CCAA:"$CCAA Codigo ISO"},
           incidencias: { $push:  {  fecha: "$Fecha" ,casos: "$Casos ",Hospitalizados: "$Hospitalizados",UCI: "$UCI",fallecidos: "$Fallecidos", Recuperados: "$Recuperados" } }
         }
     }
   ]
).pretty();

 
 db.historico.aggregate(
   [
     {
       $group:
         {
           _id: { CCAA:"$CCAA Codigo ISO", fecha: "$Fecha" },
           incidencias: { $push:  { casos: "$Casos",Hospitalizados: "$Hospitalizados",UCI: "$UCI",fallecidos: "$Fallecidos", Recuperados: "$Recuperados" } }
         }
     }
   ]
).pretty();



 
  db.historico.aggregate(
   [
     {
       $group:
         {
           _id: { CCAA:"$CCAA Codigo ISO"},
           incidencias: { $push:  {  fecha: "$Fecha" ,casos: "$Casos ",Hospitalizados: "$Hospitalizados",UCI: "$UCI",fallecidos: "$Fallecidos", Recuperados: "$Recuperados" } }
         }
     },
	 { $unwind: "$fecha" }
   ]
).pretty();



db.historico.aggregate( [ {
   $project: {
		ccaa:'$CCAA Codigo ISO',
		casos: "$Casos " ,
      date: {
         $dateFromString: {
            dateString: '$Fecha',
            timezone: 'Europe/London',
			format: "%d/%m/%Y"
         }
      }
	  
   }
} ] )


db.historico.aggregate( [ {
   $project: {
		ccaa:'$CCAA Codigo ISO',
		casos: { $toInt: "$Casos " }
      date: {
         $dateFromString: {
            dateString: '$Fecha',
            timezone: 'Europe/London',
			format: "%d/%m/%Y"
         }
      }
	  
   }
} ] )



db.historico.aggregate(
   [
      {
         $project:
           {
             ccaa:'$CCAA Codigo ISO',
             casos:
               {
                 $cond: { if: { $eq: [ "$Casos ", "" ] }, then: 0, else: {$toInt: "$Casos "} }
               },
			   hospitalizados:
               {
                 $cond: { if: { $eq: [ "$Hospitalizados", "" ] }, then: 0, else: {$toInt: "$Hospitalizados"} }
               },
			   uci:
               {
                 $cond: { if: { $eq: [ "$UCI", "" ] }, then: 0, else: {$toInt: "$UCI"} }
               },
			   fallecidos:
               {
                 $cond: { if: { $eq: [ "$Fallecidos", "" ] }, then: 0, else: {$toInt: "$Fallecidos"} }
               },
			   recuperados:
               {
                 $cond: { if: { $eq: [ "$Recuperados", "" ] }, then: 0, else: {$toInt: "$Recuperados"} }
               },
			    date: {
         $dateFromString: {
            dateString: '$Fecha',
            timezone: 'Europe/London',
			format: "%d/%m/%Y"
         }
      }
           }
      }
   ]
)



db.historico.aggregate(
   [
      {
         $project:
           {
				 date: {
					 $dateFromString: {
						dateString: '$Fecha',
						timezone: 'Europe/London',
						format: "%d/%m/%Y"
					 }
				  },
				ccaa:'$CCAA Codigo ISO',
				incidencias:[
					{
						casos:
						   {
							 $cond: { if: { $eq: [ "$Casos ", "" ] }, then: 0, else: {$toInt: "$Casos "} }
						   },
						   fallecidos:
				   {
					 $cond: { if: { $eq: [ "$Fallecidos", "" ] }, then: 0, else: {$toInt: "$Fallecidos"} }
				   },
				   recuperados:
				   {
					 $cond: { if: { $eq: [ "$Recuperados", "" ] }, then: 0, else: {$toInt: "$Recuperados"} }
				   }
						}
					],
            
				   hospitalizados:
				   {
					   planta:
					   {
						 $cond: { if: { $eq: [ "$Hospitalizados", "" ] }, then: 0, else: {$toInt: "$Hospitalizados"} }
					   },
					   uci:
					   {
						 $cond: { if: { $eq: [ "$UCI", "" ] }, then: 0, else: {$toInt: "$UCI"} }
					   }
			   
					}
			    
           }
      }
   ]
)


db.historico.aggregate(
   [
     {
       $project:
          {
            ccaa:'$CCAA Codigo ISO',
            qtyGt250: { $gt: [ "$Casos ", 0 ] },
            _id: 0
          }
     }
   ]
)



db.historico.aggregate(
   [
      {
         $project:
           {
             ccaa:'$CCAA Codigo ISO',
             casos:
               {
                 $cond: { if: { $eq: [ "$Casos ", "" ] }, then: 0, else: {$toInt: "$Casos "} }
               }
           }
      },
	  {
       $project:
          {
            ccaa:'$ccaa',
			casos:'$casos',
            muertesHoy: { $gt: [ "$casos", 0 ] },
            _id: 0
          }
     }
   ]
)


//=====================================================================================================================================

db.raw.aggregate(
   [
      {
         $project:
           {
				 date: {
					 $dateFromString: {
						dateString: '$Fecha',
						timezone: 'Europe/London',
						format: "%d/%m/%Y"
					 }
				  },
				ccaa:'$CCAA Codigo ISO',
				fallecidos:
               {
                 $cond: { if: { $eq: [ "$Fallecidos", "" ] }, then: 0, else: {$toInt: "$Fallecidos"} }
               },
				incidencias:[
					{
						casos:
						   {
							 $cond: { if: { $eq: [ "$Casos ", "" ] }, then: 0, else: {$toInt: "$Casos "} }
						   },
						   fallecidos:
				   {
					 $cond: { if: { $eq: [ "$Fallecidos", "" ] }, then: 0, else: {$toInt: "$Fallecidos"} }
				   },
				   recuperados:
				   {
					 $cond: { if: { $eq: [ "$Recuperados", "" ] }, then: 0, else: {$toInt: "$Recuperados"} }
				   }
						}
					],
            
				   hospitalizados:
				   {
					   planta:
					   {
						 $cond: { if: { $eq: [ "$Hospitalizados", "" ] }, then: 0, else: {$toInt: "$Hospitalizados"} }
					   },
					   uci:
					   {
						 $cond: { if: { $eq: [ "$UCI", "" ] }, then: 0, else: {$toInt: "$UCI"} }
					   }
			   
					}
			    
           }
      }
	  ,
	  {
       $project:
          {
            ccaa:1,
			date:1,
			incidencias:1,
			hospitalizados:1,
			muertesHoy: { $gt: [ "$fallecidos", 0 ] }
          }
     }
   ]
)


//Creación de la  coleccion de historico

db.raw.aggregate(
   [
      {
         $project:
           {
				 date: {
					 $dateFromString: {
						dateString: '$Fecha',
						timezone: 'Europe/London',
						format: "%d/%m/%Y"
					 }
				  },
				ccaa:'$CCAA Codigo ISO',
				fallecidos:
               {
                 $cond: { if: { $eq: [ "$Fallecidos", "" ] }, then: 0, else: {$toInt: "$Fallecidos"} }
               },
				incidencias:[
					{
						casos:
						   {
							 $cond: { if: { $eq: [ "$Casos ", "" ] }, then: 0, else: {$toInt: "$Casos "} }
						   },
						   fallecidos:
				   {
					 $cond: { if: { $eq: [ "$Fallecidos", "" ] }, then: 0, else: {$toInt: "$Fallecidos"} }
				   },
				   recuperados:
				   {
					 $cond: { if: { $eq: [ "$Recuperados", "" ] }, then: 0, else: {$toInt: "$Recuperados"} }
				   }
						}
					],
            
				   hospitalizados:
				   {
					   planta:
					   {
						 $cond: { if: { $eq: [ "$Hospitalizados", "" ] }, then: 0, else: {$toInt: "$Hospitalizados"} }
					   },
					   uci:
					   {
						 $cond: { if: { $eq: [ "$UCI", "" ] }, then: 0, else: {$toInt: "$UCI"} }
					   }
			   
					}
			    
           }
      }
	  ,
	  {
       $project:
          {
            ccaa:1,
			date:1,
			incidencias:1,
			hospitalizados:1,
			muertesHoy: { $gt: [ "$fallecidos", 0 ] }
          }
     },
	 { $out:"historico"	 }
	 
   ]
)

