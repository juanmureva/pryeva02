//consultas por día
db.historico.aggregate(
   [
      {
         $project:
           {
				 date: {
					 $dateFromString: {
						dateString: '$Fecha',
						timezone: 'Europe/London',
						format: "%d/%m/%Y"
					 }
				  },
				ccaa:'$CCAA Codigo ISO',
				fallecidos:
               {
                 $cond: { if: { $eq: [ "$Fallecidos", "" ] }, then: 0, else: {$toInt: "$Fallecidos"} }
               },
				
						casos:
						   {
