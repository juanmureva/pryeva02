<%- include ('partials/_header') %> 
<div class="container">
    <!-- Formulario para añadir tiendas-->
    <br/>
    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                     <form action="/add" method="GET">
                        <h3> <center> Añadir Editoriales</center></h3>
                        <br/>
                         <div class="form-group">
                             <input type='text' name="nombre" placeholder="Inserta un Nombre" 
                             class="form-control">
                         </div>
                         <div class="form-group">
                            <input type='number' name="sede" placeholder="Inserte numero de sede" 
                            class="form-control">
                        </div>
                         <div class="form-group">
                            <input type='number' step="any" name="w" placeholder="Inserta primera coordenada (W)" 
                            class="form-control">
                        </div>
                        <div class="form-group">
                            <input type='number' step="any" name="n" placeholder="Inserta segunda coordenada (N)" 
                            class="form-control">
                        </div> 
                         <button type="submit" class="btn btn-primary btn-block">Add</button>
                     </form>
                </div>
            </div>
        </div>
        </div>
        <hr style="color: black;" noshade="noshade"/>
        <br/>
        <br/>
    <!-- Lista -->
            <div class="input-group md-form form-sm form-2 pl-0">
                <h4> &nbsp;&nbsp; Buscador: </h4>
                <input class="form-control my-0 py-1 amber-border" type="text" placeholder="Search"  id="tableSearch">
            </div>
    <div class="col-nd-7">
            <table class="table table-bordered table-hover" style="background-color: white">
                <thead>
                    <br/>
                    <tr>
                        <th>Nº</th>
                        <th>Nombre</th>
                        <th>Sede</th>
                        <th>Localización</th>
                    </tr>
                </thead>
                <tbody id="myTable">
                    <% for(var i = 0; i < result.length; i++) { %>
                    <tr>
                        <td> <%= i + 1 %></td>
                        <td> <%= result[i].nombre%></td>
                        <td> <%= result[i].sede%></td>
                        <td> <%= result[i].localizacion.coordinates%></td>
                        <td>
                            <a href="/delete/<%= result[i]._id %>" class="btn btn-danger"> Delete</a>
                            <a href="/edit/<%= result[i]._id %>" class="btn btn-info"> Edit</a>
                            </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
    </div>
</div>
<style>
        .input-group.md-form.form-sm.form-2 input.amber-border {
          border: 1px solid #ffca28;
          margin: 35px 600px 50px 80px;
        }
        </style>
        <script>
        // Filter table
        
        $(document).ready(function(){
          $("#tableSearch").on("keyup", function() {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function() {
              $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
          });
        });
        </script>

<%- include ('partials/_footer') %>